<div class="post-edit">

	<h1>編集</h1>
	<%= form_for @post, :url => { :controller => :posts, :action => :update } do |f| %>

	<div class="form-group">

	<%= f.attachment_field :image, placeolder:'画像' %>

	<h3>タイトル</h3>
	<%= f.text_field :title, class: 'form-control' %>

	<h5>病院名</h5>
	<%= f.text_field :hospital, class: 'form-control' %>

	<h5>費用</h5>
		<%= f.text_field :cost, class: 'form-control' %>

	<h3>本文</h3>
	<%= f.text_area :body, class: 'form-control', rows:10 %>

	<h4>カテゴリー</h4>
	<%= f.collection_select :category_id, Category.all, :id, :category_name %>

	<h4><%= f.submit '保存', class: 'btn btn-info btn-block' %></h4>

	<% end %>

</div>