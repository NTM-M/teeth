<div class="posts-index">
	<h1>ALL POST</h1>

	<% @posts.each do |post| %>

	<div class="image">
	<%= attachment_image_tag post, :image, format: 'jpeg', fallback:"no_post_image.png", size: '300x300'  %>
	</div>

	<div class="title">
		<%= post.title %>
	</div>

	<div class="date">
		<%= post.created_at.strftime('%Y/%m/%d')%>
	</div>

	<div class="more">
	<%= link_to "more▶︎", user_post_path(post.id) %>
	</div>

	<div class="post-name">By
		<%= attachment_image_tag post.user, :user_image, format: 'jpeg', fallback:"no_image.png", size: '40x40' %>
		<%= post.user.name%>
	</div>

	<% end %>
</div>
